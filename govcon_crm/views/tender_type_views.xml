<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tender Type Form View -->
        <record id="view_govcon_tender_type_form" model="ir.ui.view">
            <field name="name">govcon.tender.type.form</field>
            <field name="model">govcon.tender.type</field>
            <field name="arch" type="xml">
                <form string="Tender Type">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Type Name"/></h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="tender_count"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description"/>
                            <field name="api_classification_keywords"/>
                        </group>
                        
                        <notebook>
                            <page string="Stages">
                                <field name="stage_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="sequence"/>
                                        <field name="fold"/>
                                        <field name="is_won"/>
                                        <field name="is_default"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Document Templates">
                                <field name="document_template_ids" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tender Type Tree View -->
        <record id="view_govcon_tender_type_tree" model="ir.ui.view">
            <field name="name">govcon.tender.type.tree</field>
            <field name="model">govcon.tender.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="tender_count"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <!-- Tender Type Action -->
        <record id="action_govcon_tender_type" model="ir.actions.act_window">
            <field name="name">Tender Types</field>
            <field name="res_model">govcon.tender.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tender types found!
                </p>
                <p>
                    Tender types are automatically created based on Dominican Republic Law 340-06 procedures.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_govcon_tender_type" name="Tender Types" parent="menu_govcon_root" action="action_govcon_tender_type" sequence="20"/>
    </data>
</odoo> 